			<xsd:complexType name="order">
				<xsd:sequence>
					<xsd:element name="id" type="xsd:integer" />
					<xsd:element maxOccurs="unbounded" name="product" type="tns:product" />
				</xsd:sequence>
			</xsd:complexType>

			<xsd:complexType name="product">
				<xsd:sequence>
